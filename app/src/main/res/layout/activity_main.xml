<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Name"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Name"/>

    <Button
        android:id="@+id/btnSaveUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save User Name"
        android:onClick="onButtonClick"/>


    <TextView
        android:id="@+id/tvDisplayUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDisplayPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnGetUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show User Name"
        android:onClick="onButtonClick"/>

    <Button
        android:id="@+id/btnInsertIntoDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INSERT into DB"
        android:onClick="onButtonClick"/>

    <Button
        android:id="@+id/btnGetFromDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get USER from DB"
        android:onClick="onButtonClick"/>

</LinearLayout>